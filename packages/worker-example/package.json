{
  "name": "@energyweb/24-7-worker",
  "version": "1.0.0",
  "description": "",
  "license": "MIT",
  "author": "Energyweb Foundation",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "yarn migration:up && nest start --preserveWatchOutput",
    "start:dev": "nest start --watch --preserveWatchOutput",
    "start:debug": "nest start --debug --watch --preserveWatchOutput",
    "start:prod": "node dist/main | pino-sentry --level error",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "migration:up": "node db/migrate.js up",
    "migration:down": "node db/migrate.js down",
    "migration:create": "node db/migrate.js create",
    "test:unit": "jest --passWithNoTests --config ./test/jest-unit.js",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --passWithNoTests --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@energyweb/worker": "7.0.3",
    "@energyweb/algorithms": "1.0.0",
    "@ethersproject/bignumber": "5.7.0",
    "@nestjs/axios": "0.1.0",
    "@nestjs/common": "9.0.11",
    "@nestjs/core": "9.0.11",
    "@nestjs/event-emitter": "^1.3.1",
    "@nestjs/platform-express": "9.0.11",
    "@nestjs/schedule": "2.1.0",
    "@nestjs/terminus": "9.1.1",
    "@nestjs/config": "2.3.1",
    "axios": "0.27.2",
    "better-sqlite3": "7.6.2",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "cockatiel": "3.0.0",
    "dotenv": "16.0.2",
    "ethers": "5.7.2",
    "ix": "5.0.0",
    "kafkajs": "2.2.2",
    "kysely": "0.22.0",
    "lodash": "4.17.21",
    "nestjs-pino": "3.1.1",
    "pino-http": "8.2.0",
    "pino-sentry": "0.13.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.5.6"
  },
  "devDependencies": {
    "@leocode/eslint-config": "2.0.0",
    "@nestjs/cli": "9.1.2",
    "@nestjs/schematics": "9.0.3",
    "@nestjs/testing": "9.1.2",
    "@types/better-sqlite3": "7.6.2",
    "@types/cron": "2.0.0",
    "@types/express": "4.17.13",
    "@types/jest": "29.2.0",
    "@types/lodash": "4.14.184",
    "@types/node": "18.7.15",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.36.2",
    "@typescript-eslint/parser": "5.36.2",
    "eslint": "8.23.0",
    "jest": "29.4.3",
    "source-map-support": "0.5.21",
    "supertest": "6.2.4",
    "ts-jest": "29.0.5",
    "ts-loader": "9.3.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.0",
    "typechain": "8.1.0",
    "typescript": "4.8.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
